<h1>Welcome <%=current_bander.name%>!</h1>

<ul class="flush-left">
<li><h2><%= link_to "Start a new report", new_bander_report_path(current_bander) %></h2></li>
<%if @draft_reports.length > 0%> 
    <li><h2>Continue working on a draft report:</h2>
    <ul>
        <%@draft_reports.each do |report|%>
            <li><h3><%= link_to report_datetime_formatted(report.date), edit_bander_report_path(current_bander, report) %></h3></li>
        <%end%>
    </ul></li>
<%end%>
<li><h2>View or edit a report you have posted:</h2><%# scope = posted %>
    <ul>
        <%@posted_reports.each do |report|%>
            <li><h3><%= link_to report_datetime_formatted(report.date), bander_report_path(current_bander, report) %></h3></li>
        <%end%>
    </ul>
</li></ul>
